{
  "name": "Quickly Append row to Spreadsheet",
  "description": "Quickly append row to Spreadsheet from Chrome extensions popup window.",
  "version": "2.0.0",
  "manifest_version": 2,
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "https://script.google.com/*",
    "cookies"
  ]
}
