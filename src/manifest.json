{
  "name": "Quickly Append row to SpreadsheetV2",
  "description": "Quickly append row to Spreadsheet from Chrome extensions popup window.",
  "version": "2.0.0",
  "manifest_version": 2,
  "author": "negabaro",
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "oauth2": {
    "client_id": "925507080528-k7p30i5rc3361om696v493gto6ueuv9v.apps.googleusercontent.com",
    "scopes": [
        "https://www.googleapis.com/auth/spreadsheets",          
        "https://www.googleapis.com/auth/drive",
        "https://www.googleapis.com/auth/drive.readonly",
        "https://www.googleapis.com/auth/drive.file",
        "https://www.googleapis.com/auth/spreadsheets.readonly"
   ]},
  "permissions": [
    "identity",
    "identity.email",
    "https://docs.google.com/spreadsheets/",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "https://script.google.com/*",
    "cookies"
  ]
}
